<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <control namespace="PowerAi" constructor="PdfViewer" version="1.0.0"
    display-name-key="PowerAi PDF Viewer" description-key="View Dataverse file column (PDF) in a responsive viewer.">
    <resources>
      <code path="index.ts" order="1" />
      <css path="css/styles.css" />
    </resources>
    <property name="tableLogicalName" of-type="SingleLine.Text" usage="input" required="true" display-name-key="Table Logical Name"/>
    <property name="recordId" of-type="SingleLine.Text" usage="bound" required="false" display-name-key="Record Id"/>
    <property name="fileColumnName" of-type="SingleLine.Text" usage="input" required="true" display-name-key="File Column Name"/>
    <property name="allowDownload" of-type="TwoOptions" usage="input" required="false" display-name-key="Allow Download"/>
    <property name="allowPrint" of-type="TwoOptions" usage="input" required="false" display-name-key="Allow Print"/>
    <property name="pageFit" of-type="Fit" usage="input" required="false" display-name-key="Page Fit"/>
    <property name="toolbarVisible" of-type="TwoOptions" usage="input" required="false" display-name-key="Toolbar Visible"/>
    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
  </control>
  <enum name="Fit">
    <option name="auto" value="0" />
    <option name="width" value="1" />
    <option name="page" value="2" />
  </enum>
</manifest>